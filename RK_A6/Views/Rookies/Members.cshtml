@{
    ViewData["Title"] = "Members";
}

<div class="text-center">
    <h1 class="display-4">List of members</h1>

    <p>
        <a asp-controller="Rookies" asp-action="Add">Add new members</a>
    </p>

    <table class="table">
        <tr>
            <th>ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Gender</th>
            <th>Date Of Birth</th>
            <th>Age</th>
            <th>Phone Number</th>
            <th>BirthPlace</th>
            <th>Graduated</th>
            <th>Actions</th>
        </tr>
        @foreach (var member in ViewBag.Members)
        {
            <tr>
                <td>@member.Id</td>
                <td>@member.FirstName</td>
                <td>@member.LastName</td>
                <td>@member.Gender</td>
                <td>@member.DateOfBirth</td>
                <td>@member.Age</td>
                <td>@member.PhoneNumber</td>
                <td>@member.BirthPlace</td>
                <td>@member.IsGraduated</td>
                <td>@Html.ActionLink("Edit", "Edit", new { id=member.Id}) | @Html.ActionLink("Delete", "Delete", new {
                id=member.Id})</td>
            </tr>
        }
    </table>
</div>
